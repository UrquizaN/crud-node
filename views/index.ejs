          <br>
          <input type="text" placeholder="CPF" name="cpf" maxlength="11" required>
          <input type="date" placeholder="Data de nascimento" name="nascimento" required>
          <br>
          <input type="text" placeholder="Celular" name="celular" required>
          <input type="email" placeholder="Email" name="email" required>
          <br>
          <input type="text" placeholder="EndereÃ§o" name="endereco" required>
